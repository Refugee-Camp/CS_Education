<h3>Create new building</h3>

<%= form_for @building do |f| %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :rent_per_floor %>
  <%= f.number_field :rent_per_floor %>
  <br>
  <%= f.label :number_of_floor %>
  <%= f.number_field :number_of_floor %>
  <br>
  <%= f.submit %><br>

<% end %>